<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/meeting_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/meeting_RL_volunteer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/meeting_LBL_volunteerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volunteer Name: "
                    android:textSize="@dimen/horizontal_meeting_item_text_size"
                    android:textStyle="bold|italic"
                    android:gravity="start"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/meeting_LBL_volunteerTheName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/horizontal_meeting_item_text_size"
                    android:textStyle="bold|italic"
                    android:maxLines="2"
                    android:gravity="start"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/meeting_RL_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/meeting_LBL_recipientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Name: "
                    android:textSize="@dimen/horizontal_meeting_item_text_size"
                    android:textStyle="bold|italic"
                    android:gravity="start"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/meeting_LBL_recipientTheName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/horizontal_meeting_item_text_size"
                    android:textStyle="bold|italic"
                    android:maxLines="2"
                    android:gravity="start"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recipient_LBL_pickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="Pick Date: "
                android:textSize="@dimen/horizontal_meeting_item_text_size"
                android:textStyle="italic|bold"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/meeting_BTN_viewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Meeting Details"
                android:textSize="14dp"
                app:textAllCaps="false"
                android:layout_centerHorizontal="true"
                app:cornerRadius="15dp"/>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
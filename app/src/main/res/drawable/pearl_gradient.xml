<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base warm pink pearl color -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#FFFAFA"
                android:centerColor="#FFF0F0"
                android:endColor="#FFE6E6" />
        </shape>
    </item>

    <!-- Warm pink iridescent overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#20FFE4E8"
                android:centerColor="#15FFE8EC"
                android:endColor="#10FFF0F5" />
        </shape>
    </item>
</layer-list>